<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="10dp"
	tools:context="deliveryapp.yudala.com.deliveryapp.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/siginin_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <EditText
            android:id="@+id/mainactivity_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email "/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/siginin_input2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/siginin_input"
            android:layout_marginTop="10dp">
            <EditText
                android:id="@+id/mainactivity_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:inputType="textPassword"/>
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/mainactivity_btnMainactivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign In"
            android:layout_below="@id/siginin_input2"
            android:layout_marginTop="20dp"/>
    </RelativeLayout>

    
</LinearLayout>